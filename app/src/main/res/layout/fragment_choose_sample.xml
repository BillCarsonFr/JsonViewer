<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseSampleFragment">

    <Button
        android:id="@+id/showWrappedViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="JSonViewer Wrap Text"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/showWrappedViewerScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="JSonViewer Scroll Hztl"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/showAsBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="JSonViewer Dialog"
        android:textAllCaps="false" />


</LinearLayout>
